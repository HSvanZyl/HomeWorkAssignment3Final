<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/jquery-3.7.1.min.js"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <style>
        /* Change the color to white on hover and for active links */
        .navbar-nav .nav-link:hover,
        .navbar-nav .nav-link:focus,
        .navbar-nav .nav-link:active {
            color: white;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark" style="background-color: #7F0909;">
        <!-- Use Gryffindor red -->
        <div class="container">
            @Html.ActionLink("MegaLibrary", "CombinedIndex", "Home", new { area = "" }, new { @class = "navbar-brand", style = "color: #FFD700;" }) <!-- Use Gryffindor gold for text color -->
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li>
                        @Html.ActionLink("Home", "CombinedIndex", "Home", new { area = "" }, new { @class = "nav-link", style = "color: #FFD700;" }) <!-- Use Gryffindor gold for text color -->
                </li>
                <li>
                    @Html.ActionLink("Maintain", "MaintainIndex", "Maintain", new { area = "" }, new { @class = "nav-link", style = "color: #FFD700;" }) <!-- Use Gryffindor gold for text color -->
            </li>
            <li>
                @Html.ActionLink("Report", "Index", "Report", new { area = "" }, new { @class = "nav-link", style = "color: #FFD700;" }) <!-- Use Gryffindor gold for text color -->
        </li>
    </ul>
</div>
</div>
</nav>


<div class="container body-content">
    @RenderBody()
    <hr />
    <footer>
        <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
    </footer>
</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)

<script>
    // Function to apply Bootstrap classes based on element type
    function applyBootstrapStyles() {
        // Apply Bootstrap table class to all tables
        $('table').addClass('table');

        // Apply Bootstrap button styles based on action names
        $('a:contains("Create")').addClass('btn btn-success btn-sm');
        $('a:contains("Edit")').addClass('btn btn-warning btn-sm');
        $('a:contains("Details")').addClass('btn btn-info btn-sm');
        $('a:contains("Delete")').addClass('btn btn-danger btn-sm');
    }

    $(document).ready(function () {
        applyBootstrapStyles();
    });
</script>

</body>
</html>
